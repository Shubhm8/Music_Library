<body>
    <div class="navbar">
        <h2>üéµ Music Library - All Songs</h2>
    </div>
    
    <div class="container">
        <a href="/admin/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
        
        <h2>All Songs</h2>
        
        <div class="filter-buttons">
            <button class="filter-btn active" onclick="loadSongs('all')">All Songs</button>
            <button class="filter-btn" onclick="loadSongs('available')">Available Only</button>
            <button class="filter-btn" onclick="loadSongs('free')">Free Songs</button>
        </div>
        
        <table id="songsTable">
            <thead>
                <tr>
                    <th>Song ID</th>
                    <th>Song Name</th>
                    <th>Singer</th>
                    <th>Music Director</th>
                    <th>Album</th>
                    <th>Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="songsList">
                <tr><td colspan="7" style="text-align: center;">Loading...</td></tr>
            </tbody>
        </table>
    </div>
    
    <script>
        async function loadSongs(type = 'all') {
            let url = 'http://localhost:8082/api/songs/all';
            
            if (type === 'available') {
                url = 'http://localhost:8082/api/songs/available';
            } else if (type === 'free') {
                url = 'http://localhost:8082/api/songs/free';
            }
            
            // Update active button
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            try {
                const response = await fetch(url);
                const songs = await response.json();
                
                const tbody = document.getElementById('songsList');
                
                if (songs.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" style="text-align: center;">No songs found</td></tr>';
                    return;
                }
                
                tbody.innerHTML = songs.map(song => `
                    <tr>
                        <td>${song.songId}</td>
                        <td>${song.songName}</td>
                        <td>${song.singer || '-'}</td>
                        <td>${song.musicDirector || '-'}</td>
                        <td>${song.albumName || '-'}</td>
                        <td><span class="badge badge-${song.songType.toLowerCase()}">${song.songType}</span></td>
                        <td><span class="badge badge-${song.songStatus === 'AVAILABLE' ? 'available' : 'not-available'}">${song.songStatus}</span></td>
                    </tr>
                `).join('');
                
            } catch (error) {
                document.getElementById('songsList').innerHTML = 
                    '<tr><td colspan="7" style="text-align: center; color: red;">Error loading songs: ' + error.message + '</td></tr>';
            }
        }
        
        // Load all songs on page load
        window.onload = () => loadSongs('all');
    </script>
</body>
